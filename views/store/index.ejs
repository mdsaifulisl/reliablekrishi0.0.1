<%- include("../partials/head.ejs") %>
<link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <!-- Header -->
   <%- include("../partials/header.ejs") %>
  
   <!-- Slider start -->
    
    
  <div class="slider">
    <div class="slides">

      <div class="slide slide1">
        <div class="img">
          <img src="/image/slider1.jpg" alt="">
        </div>

        <!-- This part will be centered like Bootstrap container -->
        <div class="slide-content container">
          <h2>ভরসার নাম—রিলায়েবল কৃষি</h2>
          <p>স্বাস্থ্যকর মাটি, উন্নত ফলন—আজকের পরিকল্পনা, আগামীর নিশ্চয়তা।</p>
          <a href="/blog" class="btn btn-primary">আরো জানুন</a>
        </div>
      </div>
      <div class="slide slide2">
        <div class="img">
          <img src="/image/slider3.png" alt="">
        </div>

        <!-- This part will be centered like Bootstrap container -->
        <div class="slide-content container">
          <h2>আপনার ফসল, আমাদের সুরক্ষা</h2>
          <p>ফসলের শত্রু চেনা, বিজ্ঞানভিত্তিক প্রতিকার জানা—এটাই রিলায়েবল কৃষির প্রতিশ্রুতি।</p>
          <a href="/disease" class="btn btn-primary">আরো জানুন</a>
        </div>
      </div>

      <div class="slide slide3">
        <div class="img">
          <img src="/image/slider2.png" alt="">
        </div>

        <!-- This part will be centered like Bootstrap container -->
        <div class="slide-content container">
          <h2>চাষাবাদে প্রযুক্তির ছোঁয়া</h2>
          <p>ড্রোন থেকে সেন্সর, অ্যাপ থেকে তথ্য—সব প্রযুক্তি এখন কৃষকের হাতে।</p>
          <a href="/technology" class="btn btn-primary">আরো জানুন</a>
        </div>
      </div>
    </div>

    <div class="dots">
      <span class="dot" onclick="currentSlide(0)"></span>
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
    </div>
  </div>
  
  <!-- Slider End -->



  <!-- Technology -->
  <section class="technology mt-4 py-5">
    <div class="container position-relative container-fluid">
      <div class="technology-heading d-flex justify-content-between ">
        <h2>প্রযুক্তি গত ব্যবহার</h2>
        <div class="technology-btn">
          <a class="bold" href="/technology">প্রযুক্তি সম্পর্কে আরো জানুন <span class="span">&#8594;</span></a>
        </div>
      </div>

      <% if (technologies.length > 0) { %>
        <div class="row mt-2 gy-5">
          <% technologies.forEach(technology => { %>
            <div class=" col-md-12">
              <div class="technology-card p-3 shadow rounded">
                <div class="row g-3 align-items-center">
                  <div class="col-md-5">
                    <img src="<%= technology.image %>" alt="<%= technology.title %>" class="img-fluid rounded w-100 h-100 object-fit-cover" style="max-height: 220px;">
                  </div>
                  <div class="col-md-7">
                    <h4 class="fw-bold"><%= technology.title %></h4>
                    <p class="technology-text"><%- technology.description.length > 200 ? technology.description.substring(0, 200) + '...' : technology.description %></p>
                    <a href="/technology/<%= technology.id %>" class="button-sky mt-2 d-inline-block">বিস্তারিত আলোচন</a>

                    <% if (isLoggedIn){%>
                      <div class="blog-btns">

                        <div>
                          <a href="/blog/edit/<%= technology.id %>" class="edit"><i class="fa-solid fa-pen-to-square"> </i> Edit</a>
                        </div>

                        <form action="/blog/delete/<%= technology.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                          <button type="submit" class="delete"><i class="fa-solid fa-trash"></i> Delete</button>
                        </form> 
                      </div>

                    <%}%>


                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <h6 class="mt-4">কোন প্রযুক্তি যোগ করা হয়নি</h6>
      <% } %>
    </div>
  </section>
  <!-- Technology end -->
  <!-- disease start -->
  <section class="disease pt-1 pb-5">
    <div class="container">
      <div class="technology-heading d-flex flex-column flex-lg-row gap-2 justify-content-between mb-lg-5 mb-md-3">
        <h2>রোগ ও পোকামাকর</h2>

        <div class="technology-btn">
          <a class="bold" href="/disease">রোগ ও পোকামাকর সম্পর্কে আরো জানুন <span class="span">&#8594;</span></a>
        </div>
      </div>

      <div class="row g-3 mt-2">

        <% if (diseases.length > 0) { %>
          <% diseases.forEach(disease => { %>
            <div class="col-lg-4 col-md-6 col-sm-6 col-12 disease-item">
              <div class="disease-item-inner">
                <div class="disease-item-img">
                  <img src="<%= disease.image %>" alt="">
                </div>
                <div class="disease-item-content d-flex flex-column gap-2 mt-3">
                  <h3><%= disease.title %></h3>
                  <div class="disease-text"><%- disease.description %></div>
                  <div class="mt-3"><a href="/diseaseDtls/<%= disease.id %>" class="button-earth">বিস্তারিত</a></div>

                  <% if (isLoggedIn){%>

                    <div class="blog-btns blog-btns-2">

                      <div>
                        <a href="/blog/edit/<%= disease.id %>" class="edit"><i class="fa-solid fa-pen-to-square"> </i> Edit</a>
                      </div>

                      <form action="/blog/delete/<%= disease.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                        <button type="submit" class="delete"><i class="fa-solid fa-trash"></i> Delete</button>
                      </form> 

                    </div>
                  <% } %>

                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <h6>রোগবালাই সম্পর্কে কিছু যোগ করা হয়নি</h6>
        <% } %>
      </div>
    </div>
  </section>
  <!-- disease End -->

  <!-- farmer start -->
   <section class="farmer">
    <div class="container">
      <div class="row g-4">
        <div class="col-lg-6">
          <div class="farmer-img farmer-img1">
            <div class="farmer-con1">
              <img class="farmer1" src="/image/farmer2.jpg" alt="">
            </div>
            <div class="farmer-con2">
              <img class="farmer2" src="/image/farmer3.jpg" alt="">
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="farmer-img farmer-img2">
            <div class="farmer-con1">
              <img class="farmer1" src="/image/farmer4.jpg" alt="">
            </div>
            <div class="farmer-con2">
              <img class="farmer2" src="/image/farmer5.jpg" alt="">
            </div>
          </div>
        </div>
      </div>
    </div>
   </section>
  <!-- farmer end -->

  <!-- Blog start -->

  <section class="blog pt-5 pb-2">
    <div class="container">
      <div class="technology-heading d-flex flex-column flex-lg-row gap-2 justify-content-between mb-lg-3 mb-md-3">
        <h2>ব্লগ</h2>
        <div class="technology-btn">
          <a class="bold" href="/blog">সবগুলো ব্লগ <span class="span">&#8594;</span></a>
        </div>
      </div>

      <div class="row g-4 mt-2">
        <% if (blogs.length > 0) { %>
          <% blogs.forEach(blog => { %>

            <div class="col-12">
            <div class="blog-card">
              <div class="blog-img">
                <img src="<%= blog.image %>" alt="">
              </div>

              <div class="blog-con">
                <h3><%= blog.title %></h3>
                <div class="blog-text" data-id="<%= blog.id %>"><%- blog.description %></div>


                <% if (isLoggedIn){%>
                  <div class="blog-btns">

                    <div>
                      <a href="/blog/edit/<%= blog.id %>" class="edit"><i class="fa-solid fa-pen-to-square"> </i> Edit</a>
                    </div>

                    <form action="/blog/delete/<%= blog.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                      <button type="submit" class="delete"><i class="fa-solid fa-trash"></i> Delete</button>
                    </form> 
                  </div>
               <% } %>

              </div>
            </div>
            
          </div>
          <% }) %>
        
        <% } else { %>
        <h6>কোন ব্লগ যোগ করা হয়নি</h6>
        <% } %>
      </div>
    </div>
  </section>
  <!-- Blog End -->

  <!--Footer-->
  <%- include("../partials/footer.ejs") %>
 <script src="/js/header.js"></script>
 <script src="/js/index.js"></script>
</body>
</html>

